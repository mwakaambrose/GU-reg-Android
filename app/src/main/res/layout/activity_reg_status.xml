<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="biz.kanamo.ambrose.gu_registration.RegStatus">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="Enter Registration Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="13/U/2398/DGK"/>
    <Button
        android:id="@+id/request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request"
        android:textColor="#fff"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/results"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Bursar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Paid: 650,000 Ugx"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Balance: 650,000 Ugx"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Dean of Students"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Signed"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Academic Registra"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Not signed."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Registration not complete"/>

    </LinearLayout>
</LinearLayout>
